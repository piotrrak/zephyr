/dts-v1/;

#include <zephyr/dt-bindings/gpio/gpio.h>
#include "ek_ra8m1_common.dtsi"

/ {
	model = "Renesas ek-ra8m1 board";

	chosen {
		zephyr,sram = &sram0;
                zephyr,flash = &flash0;
                zephyr,code-partition = &code_partition;
        };

	leds {
		compatible = "gpio-leds";
		led_0: led_0 {
			gpios = <&ioport0 6 GPIO_ACTIVE_HIGH>;
			label = "LED1 (Blue)";
		};
		led_1: led_1 {
			gpios = <&ioport0 7 GPIO_ACTIVE_HIGH>;
			label = "LED2 (Green)";
		};
		led_2: led_2 {
			gpios = <&ioport0 8 GPIO_ACTIVE_HIGH>;
			label = "LED3 (Red)";
		};
        };

	aliases {
		led0 = &led_0;
		led-blue = &led_0;
		led-green = &led_1;
		led-red = &led_2;
        };
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		code_partition: partition@0 {
			label = "code";
			reg = <0x00000000 0x4C000>;
			read-only;
                };
        };
};

&fcu {
	status = "okay";
};

&ioport0 {
	status = "okay";
};

&ioport1 {
	status = "okay";
};

&ioport4 {
	status = "okay";
};

&ioport6 {
	status = "okay";
};

&pinctrl {
	status = "okay";
};
