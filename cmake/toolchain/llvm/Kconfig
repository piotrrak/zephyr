config TOOLCHAIN_LLVM
	def_bool y
	depends on "${ZEPHYR_TOOLCHAIN_VARIANT}" = "llvm"
	select BUILD_NO_GAP_FILL

choice LLVM_LINKER
	prompt "LLVM Linker"
	depends on "${ZEPHYR_TOOLCHAIN_VARIANT}" = "llvm"
	default LLVM_USE_LD

config LLVM_USE_LD
	bool "GNU ld"
	help
	  Use binutils ld linker with llvm/clang.

config LLVM_USE_LLD
	bool "LLVM lld"
	help
	  Use LLVM built-in lld linker with llvm/clang.

endchoice
